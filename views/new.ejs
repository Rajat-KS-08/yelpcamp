<%- include("partials/header") %>
<div class="container">
	 <div class="text-center py-3">
		<h1>
	        Create a new Campground - 
        </h1>
	</div>
	<div class="row">
		 
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
				    <input class="form-control" type="text" placeholder="Enter the name of the Campground" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Enter the image url" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Enter the description" name="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
	         
	         
            </form>
		</div>
		
	</div>
	<center><a href="/campgrounds">Go back to the Campgrounds Page</a></center>
	
</div>

 

 

 