<%- include("partials/header") %>
<div class="container">
	 <div class="text-center py-3">
		<h1>
	        Edit your comment
        </h1>
	</div>
	<div class="row">
		 
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
				    <input class="form-control" type="text"  value="<%= comment.text %>" name="comment[text]">
				</div>
				 
				 
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
	         
	         
            </form>
		</div>
		
	</div>
	<center><a href="/campgrounds">Go back to the Campgrounds Page</a></center>
	
</div>

 

 

 